// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 권한
enum Role {
  USER
  ADMIN
}

// NextAuth 기본 모델
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // 권한 및 인증용
  role         Role     @default(USER)
  passwordHash String?  // Credentials 로그인용 (bcrypt 해시 저장)

  username     String?  @unique

  // 관계
  accounts  Account[]
  sessions  Session[]
  posts     Post[]    @relation("PostAuthor")
  notices   Notice[]  @relation("NoticeAuthor")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 기존 모델(선택적으로 작성자 연결)
model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // 작성자(선택)
  authorId  String?
  author    User?     @relation("PostAuthor", fields: [authorId], references: [id])
}

model Notice {
  id        Int       @id @default(autoincrement())
  title     String
  body      String    @db.Text
  isPinned  Boolean   @default(false)
  published Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // 작성자(선택)
  authorId  String?
  author    User?     @relation("NoticeAuthor", fields: [authorId], references: [id])

  // 즐겨 쓰는 정렬/조회 패턴용 인덱스
  @@index([isPinned, createdAt])
}

model Reservation {
  id        Int      @id @default(autoincrement())
  type      String   // 상담구분
  name      String   // 이름
  phone     String   // 연락처
  password  String   // 비밀번호 (암호화 필요)
  email     String   // 이메일
  title     String?  // 제목 (선택)
  content   String?  @db.Text // 내용 (선택)
  status    String   @default("pending") // 상태: pending, confirmed, completed, cancelled
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([createdAt])
}

model Content {
  id        Int      @id @default(autoincrement())
  key       String   @unique  // 예: "about-intro", "services-title"
  value     String   @db.Text
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("contents")
}